  config.vm.define "lb-infra-two-okd11" do |app|
      app.vm.box = "centos/7"
      config.disksize.size = '15GB'
      app.vm.hostname = "lb-infra.192.168.33.6.xip.io"
      app.vm.network "private_network", ip: "192.168.33.6"
